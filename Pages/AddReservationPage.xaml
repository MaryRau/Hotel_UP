<Page x:Class="Hotel_UP.Pages.AddReservationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel_UP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddReservationPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="159*"/>
            <ColumnDefinition Width="241*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Text="Комната:" FontSize="24" Height="36" VerticalAlignment="Center" Margin="149,0,10,0" TextAlignment="Right"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Фамилия гостя:" FontSize="24" Height="37" VerticalAlignment="Center" Margin="10,0,10,0" TextAlignment="Right"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Имя гостя:" FontSize="24" Height="37" VerticalAlignment="Center" Margin="10,0,10,0" TextAlignment="Right"/>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Отчество гостя:" FontSize="24" Height="37" VerticalAlignment="Center" Margin="10,0,10,0" TextAlignment="Right"/>
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Дата заезда:" FontSize="24" Height="36" VerticalAlignment="Center" Margin="97,0,10,0" TextAlignment="Right"/>
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Дата выезда:" FontSize="24" Height="37" VerticalAlignment="Center" Margin="87,0,10,0" TextAlignment="Right"/>

        <ComboBox Name="cmbRoom" Grid.Row="0" Grid.Column="1" Margin="10,16,20,15"/>
        <TextBox Name="txtSecName" Grid.Row="1" Grid.Column="1" Margin="10,16,20,15"/>
        <TextBox Name="txtFirstName" Grid.Row="2" Grid.Column="1" Margin="10,16,20,15"/>
        <TextBox Name="txtPatr" Grid.Row="3" Grid.Column="1" Margin="10,16,20,15"/>
        <DatePicker Name="dateEntry" Grid.Row="4" Grid.Column="1" Margin="10,16,20,15" FontSize="16" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <DatePicker Name="dateEnd" Grid.Row="5" Grid.Column="1" Margin="10,16,20,15" FontSize="16" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>

        <Button Name="btnSave" Grid.Row="6" Grid.Column="1" Content="Сохранить" VerticalAlignment="Center" Height="52" Width="150" Margin="10,0,322,0" Click="btnSave_Click"/>
    </Grid>
</Page>
